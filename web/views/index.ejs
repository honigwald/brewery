                    xLabel: 'Minuten',
                    yLabel: 'Grad Celsius',
                    dataPoints: [
                        { label: '1',  y: 30  },
                        { label: '5', y: 60  },
                        { label: '10', y: 70  },
                        { label: '15',  y: 65  },
                        { label: '20',  y: 60  },
